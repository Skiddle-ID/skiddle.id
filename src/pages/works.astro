---
import Shell from '../layouts/shell.astro';
import works from '../data/works';
---

<Shell title="skiddle@web ~/works" description="Jeff’s work — DevOps engineer building platforms, automation, and networks across cloud and self‑hosted. Passionate about AI and aviation.">
  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold mb-2">{works.header.name}</h1>
      <p class="text-xl text-[var(--color-primary)] mb-4">{works.header.title}</p>
      <div class="flex justify-center gap-4 text-sm">
        <span>{works.header.location}</span>
        <span>•</span>
        <a href={`mailto:${works.header.email}`} class="text-[var(--color-primary)] underline">{works.header.email}</a>
        {works.header.links.github && (<>
          <span>•</span>
          <a href={works.header.links.github} class="text-[var(--color-primary)] underline">GitHub</a>
        </>)}
        {works.header.links.bluesky && (<>
          <span>•</span>
          <a href={works.header.links.bluesky} class="text-[var(--color-primary)] underline">Bluesky</a>
        </>)}
      </div>
    </div>

    <div class="space-y-8">
      <!-- Summary -->
      <section>
        <h2 class="text-xl font-bold text-[var(--color-primary)] border-b border-muted pb-2 mb-4">Summary</h2>
        {works.summary.map((p) => (
          <p class="text-base leading-relaxed">{p}</p>
        ))}
      </section>

      <!-- Experience -->
      <section>
        <h2 class="text-xl font-bold text-[var(--color-primary)] border-b border-muted pb-2 mb-4">Experience</h2>
        <div class="space-y-6">
          {works.experience.map((exp) => (
            <div>
              <div class="mb-2">
                <h3 class="font-bold">{exp.company}</h3>
              </div>
              <div class="space-y-4 ml-2">
                {exp.positions.map((pos) => (
                  <div>
                    <div class="flex justify-between items-start">
                      <p class="text-[var(--color-white)]/90 font-medium">{pos.role}</p>
                      <span class="text-sm text-base03">{pos.start} - {pos.end}</span>
                    </div>
                    <ul class="list-disc list-inside space-y-1 text-sm ml-4 mt-1">
                      {pos.highlights.map((h) => (<li>{h}</li>))}
                    </ul>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
      </section>

      <!-- Education -->
      <section>
        <h2 class="text-xl font-bold text-[var(--color-primary)] border-b border-muted pb-2 mb-4">Education</h2>
        <div class="space-y-6">
          {works.education.map((ed) => (
            <div>
              <div class="flex justify-between items-start mb-2">
                <div>
                  <h3 class="font-bold">{ed.degree}</h3>
                  <p class="text-base03">{ed.school}</p>
                </div>
                <span class="text-sm text-base03">{ed.start}{ed.end ? ` - ${ed.end}` : ''}</span>
              </div>
              {ed.description && (<p class="text-sm ml-4">{ed.description}</p>)}
            </div>
          ))}
        </div>
      </section>

      <!-- Skills -->
      <section>
        <h2 class="text-xl font-bold text-[var(--color-primary)] border-b border-muted pb-2 mb-4">Technical Skills</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <h3 class="font-semibold mb-2">Programming Languages</h3>
            <div class="flex flex-wrap gap-2">
              {works.skills.programmingLanguages.map((s) => (
                <span class="px-2 py-1 bg-muted rounded text-sm">{s}</span>
              ))}
            </div>
          </div>
          <div>
            <h3 class="font-semibold mb-2">DevOps & Infrastructure</h3>
            <div class="flex flex-wrap gap-2">
              {works.skills.devopsInfrastructure.map((s) => (
                <span class="px-2 py-1 bg-muted rounded text-sm">{s}</span>
              ))}
            </div>
          </div>
          <div>
            <h3 class="font-semibold mb-2">Frameworks & Tools</h3>
            <div class="flex flex-wrap gap-2">
              {works.skills.frameworksTools.map((s) => (
                <span class="px-2 py-1 bg-muted rounded text-sm">{s}</span>
              ))}
            </div>
          </div>
          <div>
            <h3 class="font-semibold mb-2">Other Interests</h3>
            <div class="flex flex-wrap gap-2">
              {works.skills.interests.map((s) => (
                <span class="px-2 py-1 bg-muted rounded text-sm">{s}</span>
              ))}
            </div>
          </div>
        </div>
      </section>

      <!-- Projects -->
      <section>
        <h2 class="text-xl font-bold text-[var(--color-primary)] border-b border-muted pb-2 mb-4">Notable Projects</h2>
        <div class="space-y-4">
          {works.projects.map((prj) => (
            <div>
              <div class="flex justify-between items-start mb-2">
                <h3 class="font-bold">{prj.title}</h3>
                <div class="flex gap-2 items-center">
                  {prj.status && (<span class="text-sm text-base03">{prj.status}</span>)}
                  {prj.live && (
                    <a href={prj.live} class="text-[var(--color-primary)] underline text-sm">Live</a>
                  )}
                  {prj.github && (
                    <a href={prj.github} class="text-[var(--color-primary)] underline text-sm">GitHub</a>
                  )}
                </div>
              </div>
              <p class="text-sm mb-2">{prj.description}</p>
              <div class="flex flex-wrap gap-1">
                {prj.labels.map((l) => (
                  <span class="px-2 py-0.5 bg-muted rounded text-xs">{l}</span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </section>

      <!-- Certifications -->
      <section>
        <h2 class="text-xl font-bold text-[var(--color-primary)] border-b border-muted pb-2 mb-4">Certifications & Licenses</h2>
        <div class="space-y-2">
          {works.certifications.map((c) => (
            <div class="flex justify-between items-center">
              <span>{c.title}</span>
              <span class="text-sm text-base03">{c.yearOrStatus}</span>
            </div>
          ))}
        </div>
      </section>
    </div>
  </div>
</Shell>

